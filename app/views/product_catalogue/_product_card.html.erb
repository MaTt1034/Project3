<div class="col">
  <div class="card">
    <img src="..." class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">
        <%= product.name %>
      </h5>
      <p class="card-text">
        <%= product.description %>
        <br>
        Price: $<%= product.price %>
      </p>
    </div>
    <div class="card-footer">
      <button type="button" class="btn btn-success">
        <i class="bi bi-cart-plus-fill"></i>
        Add to Cart
      </button>
    </div>
  </div>
</div>
